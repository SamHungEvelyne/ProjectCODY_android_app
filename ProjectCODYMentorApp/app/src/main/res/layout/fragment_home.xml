<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CodyColor"
    tools:context=".homeFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/top_menu"/>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp">

        <TextView
            android:id="@+id/workspace_text"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="center"
            android:text="WORKSPACE"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            android:textStyle="bold" />
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="232dp"
        android:layout_height="157dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/circularlogo" />

        <TableRow>

            <Button
                android:id="@+id/pending_button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/nunito_semibold"
                android:text="Pending"
                android:layout_marginTop="10dp"
                android:translationY="8dp"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/classes_button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/nunito_semibold"
                android:text="Classes"
                android:translationY="8dp"
                android:layout_marginTop="10dp"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/students_button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/nunito_semibold"
                android:text="Students"
                android:translationY="8dp"
                android:layout_marginTop="10dp"/>
        </TableRow>
    </TableLayout>

</FrameLayout>